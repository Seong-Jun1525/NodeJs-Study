<%- include("./include/_header") %>
<!-- Main -->
<main>
    <div class="container">
        <div class="btnDiv">
            <a href="/contacts" class="btn btn-primary"><i class="fa-solid fa-users"></i> 연락처 목록보기</a>
        </div>
        <form action="/contacts/add" method="post" class="userFrom">
            <div class="formHeader">
                <h2>연락처 추가</h2>
                <p>연락처 정보를 추가합니다.</p>
            </div>
            <div class="formContainer">
                <fieldset>
                    <legend>Name</legend>
                    <input type="text" id="name" name="name" placeholder="홍길동">
                </fieldset>
                <fieldset>
                    <legend>Email</legend>
                    <input type="email" id="email" name="email" placeholder="asd@naver.com">
                </fieldset>
                <fieldset>
                    <legend>Phone</legend>
                    <input type="text" id="phone" name="phone" placeholder="010-1234-1234">
                </fieldset>
                <button type="submit" class="btn btn-primary conBtn">저장하기</button>
            </div>
        </form>
    </div>
</main>
<%- include("./include/_footer") %>