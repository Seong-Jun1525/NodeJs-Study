<%- include("./include/_header") %>
<main>
    <div class="container">
        <div class="btnDiv">
            <a href="/contacts" class="btn btn-primary"><i class="fa-solid fa-users"></i> 연락처 목록보기</a>
        </div>
        <form action="/contacts/update/<%= contact._id %>?_method=put" method="post" class="userFrom">
            <div class="formHeader">
                <h2>연락처 수정</h2>
                <p>연락처 정보를 수정합니다.</p>
            </div>
            <div class="formContainer">
                <fieldset>
                    <legend>Name</legend>
                    <input type="text" id="name" name="name" value="<%= contact.name %>">
                </fieldset>
                <fieldset>
                    <legend>Email</legend>
                    <input type="email" id="email" name="email" value="<%= contact.email %>">
                </fieldset>
                <fieldset>
                    <legend>Phone</legend>
                    <input type="text" id="phone" name="phone" value="<%= contact.phone %>">
                </fieldset>
                <button type="submit" class="btn btn-primary conBtn">수정하기</button>
            </div>
        </form>
    </div>
</main>
<%- include("./include/_footer") %>