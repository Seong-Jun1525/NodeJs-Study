<%- include("./include/_header") %>
<main>
    <div class="container">
        <form action="/register" method="post" class="userForm">
            <div class="authContainer">
                <h2>관리자 등록</h2>
                <div class="mb-3">
                    <input type="text" class="loginInput form-control" id="adminId" name="adminId" placeholder="관리자 아이디">
                </div>
                <div class="mb-3">
                    <input type="password" class="loginInput form-control" id="adminPw" name="adminPw" placeholder="비밀번호">
                </div>
                <div class="mb-3">
                    <input type="password" class="loginInput form-control" id="adminPw2" name="adminPw2" placeholder="비밀번호 확인">
                </div>
                <button type="submit" class="btn btn-primary">등록</button>
            </div>
          </form>
    </div>
</main>
<%- include("./include/_footer") %>